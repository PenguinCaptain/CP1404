BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0.0'
            font_size: 48
            multiline: False
            on_text: app.convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.increment(1)
            Button:
                text: 'Down'
                on_press: app.increment(-1)
    Label:
        text: '0.0'
        id: output_label
        font_size: 48
        color: (1, 0.6, 0.6, 1)
